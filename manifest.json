{
  "manifest_version": 2,
  "name": "aQRate",
  "version": "1.0",

  "description": "Get the current URL as a QR code or HTML tag.",
  "homepage_url": "https://github.com/Joelmmm/aQRate.git",
  
  "icons": {
    "32": "icons/qr-32.png",
    "48": "icons/qr-48.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "options_ui": {
    "page": "options_page/options.html",
    "open_in_tab": false
  },

  "background": {
    "scripts": ["build/background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },  

  "browser_action": {
    "default_icon": "icons/qr-32.png",
    "default_title": "aQRate",
    "default_popup": "popup/aQRate.html"
  }
}
